macro node_visited_style {
 val color_visited_node = "lightblue";
 "style=\"rounded,filled\"";"fillcolor=\""+color_visited_node+"\"";
};

macro edge_visited_style {
 "penwidth=4";"color=blue";
};

dot_gen_properties{
 for (i : S1,S2,S3 ){
  node_display_properties{i.A;node_visited_style{};};
  node_display_properties{i.C;node_visited_style{};};
  node_display_properties{i.D;node_visited_style{};};
  edge_display_properties{i. 0;edge_visited_style{};};
  edge_display_properties{i. 2;edge_visited_style{};};
  edge_display_properties{i. 3;edge_visited_style{};};
 }
};
