 * @section DESCRIPTION
 * 
 * Sender definition for iVeNet ==> TRGS BAG communication.
 * 
 */

sender{
  id{ivenet_to_trgs_bag_mast;};
  when{IVenetNotify;}; 
  emit{iVeNetToTrgsBagMast;};
  transport{
    som{2;}; //Sentinels: start of message (som)/ end of message (eom) 
    eom{3;};   
    generic_tcp_out{
      port{TRGSBAGMAST_PORT;};
      ip{"127.0.0.1";};         
    };
   };    
};

