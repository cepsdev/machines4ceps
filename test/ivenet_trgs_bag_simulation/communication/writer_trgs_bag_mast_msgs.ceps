/**
 * Event triggered sender (TRGS BAG -> iVeNet) using generic stream connection with terminator.
 */
sender{
  when{TrgsBagNotify;}; //Read: *when*ever the event TrgsBagNotif occurs *emit* a message TrgsBagMastToiVeNet. 
                        //TrgsBagMastToiVeNet is defined in comm.ceps
  emit{TrgsBagMastToiVeNet;};
  transport{
    som{2;};//Sentinels: start of message (som)/ end of message (eom) 
    eom{3;};
    use{receiver_of_ivenet_messages;};//share communication structure    
  };    
};