/**
 * Event triggered receiver of TrgsBagMastToiVeNet messages (TRGS BAG -> iVeNet) using generic stream connection with sentinels.
 * 
 * 
 */
receiver{
  when{TrgsBagMastToiVeNet_in;}; //Read: *when*ever the event TrgsBagNotif occurs *emit* a message TrgsBagMastToiVeNet. 
                        //TrgsBagMastToiVeNet is defined in comm.ceps
  emit{TrgsBagNotify;};
  transport{
    som{2;};   //Sentinels: start of message (som)/ end of message (eom) 
    eom{3;};
    use{ivenet_to_trgs_bag_mast;}; //Share communication structure 
  };    
};