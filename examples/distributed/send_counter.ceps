 */

kind Event;
kind Systemstate;

Event Send_Counter,Request_Counter;

Systemstate counter,weight,height;

Statemachine
{
 id{Sender;};
 States{
    Initial;
    Final;
    A;
 };
 Actions{
    action{
       inc(counter);
       Send_Counter(counter);   
    };
  }; 
 
 Transition{Initial;A;};
 Transition{A;A;Request_Counter;action;};
};


/**
 * @section DESCRIPTION
 * */
Simulation
{
 counter = 1;weight = 10*kg;height=100*m;
 Start{Sender;};
};
